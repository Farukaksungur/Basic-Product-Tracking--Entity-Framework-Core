@model Product
<h2> Create</h2>


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <form asp-controller="Product" method="post" asp-action="Create"> 
        <div class="form-group">
            <label>Product Name</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
        <div class="form-group">
            <label>Product Desc</label>
            <input type="text" class="form-control" asp-for="Desc">
        </div>
        <div class="form-group">
            <label>Product Price</label>
            <input type="text" class="form-control" asp-for="Price">
        </div>
        <div class="form-group">
            <label>Product Category</label>
            <input type="text" class="form-control" asp-for="Category">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
</html>





